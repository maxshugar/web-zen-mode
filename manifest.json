{
	"manifest_version": 3,
	"name": "Zen Mode",
	"description": "Blocks distractions and helps you focus online.",
	"version": "1.0",
	"icons": {
		"16": "images/icon-16.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},
	"content_scripts": [
		{
			"js": ["content-script.js"],
			"matches": ["*://*.youtube.com/*"]
		}
	],
	"permissions": ["scripting"]
}
